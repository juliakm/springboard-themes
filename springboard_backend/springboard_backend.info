name = Springboard Backend
description = A stripped-down, responsive, HTML5 and CSS3 theme for Springboard fundraising.
package = Springboard
version = 7.x-4.x-dev
core = 7.x
base theme = springboard_base

dependencies[] = springboard_admin
dependencies[] = jquery_update

;Regions
regions[header] = Header
regions[content] = Content
regions[footer] = Footer

;Stylesheets
stylesheets[all][] = css/uniform_base.css
stylesheets[all][] = css/styles.css

;Scripts
scripts[] = js/jquery.uniform.js
scripts[] = js/script.js

;Theme Settings
settings[default_logo] = 1
